#!/bin/sh

cd "$HOME/Document/googleDrive"


option=$(echo -e "ntu\nopottGmail" | rofi -dmenu -p "optionðŸ¤ ")
action=$(echo -e "download\nupload" | rofi -dmenu -p "actionðŸ¤ ")

case $option in
    "ntu")
        case $action in
            "download")
                grive -f
                notify-send "download is finished" ;;
            "upload")
                grive -u 
                notify-send "upload is finished" ;;
        esac
    "opottGmail")
        case $action in
            "download")
                grive -f
                notify-send "download is finished" ;;
            "upload")
                grive -u 
                notify-send "upload is finished" ;;
        esac
esac

