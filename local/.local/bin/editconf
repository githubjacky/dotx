#!/bin/sh

declare -a edit=(
"ğŸ„editconf"
"â˜„ï¸alacritty"
"ğŸ¦”xmonad"
"ğŸ€zshenv"
"ğŸ§Šxinitrc"
"ğŸ¢archSetup"
"ğŸ©polybar"
"ğŸ“bookmark"
"ğŸ”§toolBar"
"ğŸ“’readingList"
"ğŸƒntuBoookMark"
"ğŸª´boxMark"
"ğŸ””notify"
"ğŸ§°other"
)

choice=$(printf '%s\n' "${edit[@]}" | rofi -dmenu -p "edit the fileğŸ—‚")
editor="st"

case $choice in
    "ğŸ„editconf")
        dir="$HOME/.local/bin"
        $editor -e $EDITOR $dir/editconf ;;
    "â˜„ï¸alacritty")
        dir="$HOME/.config/alacritty"
        $editor -e $EDITOR $dir/alacritty.yml ;;
    "ğŸ¦”xmonad")
        dir="$HOME/.config/xmonad"
        $editor -e $EDITOR $dir/xmonad.hs ;;
    "ğŸ€zshenv")
        dir="$HOME/.config/zsh"
        $editor -e $EDITOR $dir/zshenv ;;
    "ğŸ§Šxinitrc")
        dir="$HOME/.config/X11"
        $editor -e $EDITOR $dir/xinitrc ;;
    "ğŸ¢archSetup")
        dir="$HOME/repo/archSetup"
        $editor -e $EDITOR $dir/install.sh ;;
    "ğŸ©polybar")
        dir="$HOME/.config/polybar"
        $editor -e $EDITOR $dir/config.ini ;;
    "ğŸ“bookmark")
        dir="$HOME/.local/bin"
        $editor -e $EDITOR $dir/bookmark ;;
    "ğŸ”§toolBar")
        dir="$HOME/.local/share/BookMark"
        $editor -e $EDITOR $dir/toolBar ;;
    "ğŸ“’readingList")
        dir="$HOME/.local/share/BookMark"
        $editor -e $EDITOR $dir/readingList ;;
    "ğŸƒNTUBookMark")
        dir="$HOME/.local/share/BookMark/NTUBookMark"
        file=$(echo -e "ğŸ“˜juniroFirst\nğŸ”–juniroSecond\nğŸ“šseniorFirst" | rofi -dmenu -p "BookMark ğŸ“¡:")
        file=${file: 1}
        $editor -e $EDITOR $dir/$file ;;
    "ğŸ””notify")
        dir="$HOME/.local/bin"
        $editor -e $EDITOR $dir/notify ;;
    "ğŸ§°other")
        $editor -e "ranger" ;;
    "ğŸª´boxMark")
        bm=$(echo -e "ğŸpythonResources\nğŸ«juliaResources\nğŸ“‰econData\nğŸŒwebDevelopment" | rofi -dmenu -p "BookMark ğŸ“¡:")
        dir="$HOME/.local/share/BookMark"
        case $bm in
            "ğŸpythonResources")
                $editor -e $EDITOR $dir/python ;;
            "ğŸ«juliaResources")
                $editor -e $EDITOR $dir/julia ;;
            "ğŸ“‰econData")
                $editor -e $EDITOR $dir/econData ;;
            "ğŸŒwebDevelopment")
                $editor -e $EDITOR $dir/webDevelopment ;;
        esac ;;
esac
