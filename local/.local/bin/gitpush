#!/bin/sh

repo=$(echo -e "dotx🪐\narch-installation-script🍁\nleetCode-practice🦺" | rofi -dmenu -p "choose the repo🦚 ")
case $repo in
    "dotx🪐")
        cd $HOME/dotx ;;
    "arch-installation-scrip🍁")
        cd $HOME/repo/github/os_set/arch ;;
    "leetCode-practice")
        cd $HOME/repo/github/leet_code_practice ;;
esac

git add .

message=$(rofi -dmenu -p "enter your message🧵 ")
git commit -m "$message"
notify-send "pushing data to remote server"

git push
notify-send "remote server has been updated"
