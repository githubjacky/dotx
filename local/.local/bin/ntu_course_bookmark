#!/bin/sh


declare -a website=(
"ğŸ•¸linear-algebra https://speech.ee.ntu.edu.tw/~hylee/la/2021-fall.html"
"ğŸ’»coumputer-introduction http://www.csie.ntu.edu.tw/~cyy/introcs"
"ğŸ’»computer-introduction-reference https://www.nand2tetris.org/"
"ğŸ’»computer-introduction-answer https://github.com/akmcc/nand-2-tetris"
"ğŸŒªdigital-circuit-youtube https://www.youtube.com/channel/UC4VMtodpxx9IXlSO9Bjsasw"
"ğŸŒªdigital-circuit-answer https://dokumen.tips/documents/solutions-manual-microelectronic-circuit-design-4th-ed-567ff0281b5b9.html"
